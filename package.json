  "bugs": {
    "url": "https://github.com/TamirOffen/CallOfDuty/issues"
  },
  "homepage": "https://github.com/TamirOffen/CallOfDuty#readme",
  "dependencies": {
    "@fastify/mongodb": "^9.0.2",
    "fastify": "^5.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@vitest/coverage-v8": "^3.0.5",
    "pino-pretty": "^13.0.0",
    "vitest": "^3.0.5"
  },
  "test": {
    "coverage": {
      "provider": "v8", 
      "reporter": ["text"] 
